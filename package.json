{
	"name": "pow-reaction",
	"version": "1.0.1",
	"type": "module",
	"author": "Viktor Shchelochkov <hi@hloth.dev> (https://hloth.dev)",
	"description": "proof-of-work reactions for your blogs",
	"keywords": [
		"svelte",
		"svelte-component",
		"pow",
		"proof-of-work",
		"blog-component"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/VityaSchel/pow-reaction.git"
	},
	"bugs": {
		"url": "https://github.com/VityaSchel/pow-reaction/issues"
	},
	"homepage": "https://github.com/VityaSchel/pow-reaction#readme",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && bun run prepack",
		"preview": "bun run build && wrangler pages dev",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"deploy": "bun run build && wrangler pages deploy",
		"cf-typegen": "wrangler types src/worker-configuration.d.ts"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-cloudflare": "^7.2.3",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"wrangler": "^4.33.1"
	},
	"dependencies": {
		"@noble/hashes": "^2.0.0",
		"@oslojs/jwt": "^0.3.0",
		"zod": "^4.0.0"
	}
}